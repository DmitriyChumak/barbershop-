    <record id="day_thursday" model="barbershop.days.of.week">
        <field name="name">Thursday</field>
        <field name="sequence">4</field>
    </record>
    <record id="day_friday" model="barbershop.days.of.week">
        <field name="name">Friday</field>
        <field name="sequence">5</field>
    </record>
    <record id="day_saturday" model="barbershop.days.of.week">
        <field name="name">Saturday</field>
        <field name="sequence">6</field>
    </record>
    <record id="day_sunday" model="barbershop.days.of.week">
        <field name="name">Sunday</field>
        <field name="sequence">7</field>
    </record>
</odoo>
